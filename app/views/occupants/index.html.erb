<p id="notice"><%= notice %></p>

<h1>Occupants</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Roomnumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @occupants.each do |occupant| %>
      <tr>
        <td><%= occupant.firstname %></td>
        <td><%= occupant.lastname %></td>
        <td><%= occupant.roomnumber %></td>
        <td><%= link_to 'Show', occupant %></td>
        <td><%= link_to 'Edit', edit_occupant_path(occupant) %></td>
        <td><%= link_to 'Destroy', occupant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

